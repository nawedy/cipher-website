# .env.local.example
# Environment configuration template for Cipher Intelligence platform

# =============================================================================
# GENERAL CONFIGURATION
# =============================================================================

# Application Environment
NODE_ENV=development
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# Application Metadata
NEXT_PUBLIC_APP_NAME="Cipher Intelligence"
NEXT_PUBLIC_APP_DESCRIPTION="Pioneering Technology, United Expertise"
NEXT_PUBLIC_APP_VERSION="1.0.0"

# =============================================================================
# NEONDB CONFIGURATION
# =============================================================================


# Stripe Configuration Live Keys



# JWT Configuration
JWT_SECRET=
NEXTAUTH_SECRET=

# Stripe Configuration Test Keys


# Stripe Price IDs for products
STRIPE_PRICE_ID_BASIC=price_your-basic-plan-id
STRIPE_PRICE_ID_PREMIUM=price_your-premium-plan-id
STRIPE_PRICE_ID_ENTERPRISE=price_your-enterprise-plan-id

# Next.js Configuration
NEXTAUTH_URL="http://localhost:3000"

# Stripe Configuration (Test Mode)

# Email Configuration (Optional)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@domain.com"
SMTP_PASS="your-app-password"

# =============================================================================
# ANALYTICS & TRACKING
# =============================================================================

# Google Analytics 4 Measurement ID
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX

# Google Tag Manager ID (optional)
GOOGLE_TAG_MANAGER_ID=GTM-XXXXXXX

# Facebook Pixel ID (optional)
FACEBOOK_PIXEL_ID=your-facebook-pixel-id

# LinkedIn Insight Tag ID (optional)
LINKEDIN_INSIGHT_TAG_ID=your-linkedin-insight-tag-id

# =============================================================================
# SEO & VERIFICATION
# =============================================================================

# Google Search Console Verification
GOOGLE_VERIFICATION_ID=your-google-verification-id

# Bing Webmaster Tools Verification
BING_VERIFICATION_ID=your-bing-verification-id

# =============================================================================
# EMAIL SERVICES
# =============================================================================

# Resend API Key (for transactional emails)
RESEND_API_KEY=re_your-resend-api-key

# SendGrid API Key (alternative email service)
SENDGRID_API_KEY=SG.your-sendgrid-api-key

# Default sender email address
EMAIL_FROM=noreply@cipherintelligence.com
EMAIL_FROM_NAME="Cipher Intelligence"

# =============================================================================
# EXTERNAL API INTEGRATIONS
# =============================================================================


# =============================================================================
# SECURITY & AUTHENTICATION
# =============================================================================

# NextAuth.js Secret (generate with: openssl rand -base64 32)
NEXTAUTH_SECRET=


# JWT Secret for custom authentication
JWT_SECRET=

# Encryption key for sensitive data
ENCRYPTION_KEY=

# Rate limiting configuration
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000

# =============================================================================
# DIVISION-SPECIFIC CONFIGURATIONS
# =============================================================================

# Cipher Strategy Division
CS_SUBDOMAIN=strategy
CS_API_KEY=your-strategy-api-key

# Cipher DigitalWorks Division
CDW_SUBDOMAIN=growth
CDW_API_KEY=your-digitalworks-api-key

# Cipher Labs Division
CL_SUBDOMAIN=labs
CL_API_KEY=your-labs-api-key

# Cipher Studio Division
CST_SUBDOMAIN=studio
CST_API_KEY=your-studio-api-key

# Cipher AI Division
CAI_SUBDOMAIN=ai
CAI_API_KEY=your-ai-api-key

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# Primary Database URL (neon PostgreSQL)


# Redis URL for caching (optional)
REDIS_URL=redis://localhost:6379

# =============================================================================
# DEVELOPMENT & DEBUGGING
# =============================================================================

# Enable debug mode
DEBUG=true

# Log level (error, warn, info, debug)
LOG_LEVEL=info

# Enable SQL query logging
LOG_QUERIES=false

# Enable performance monitoring
ENABLE_PERFORMANCE_MONITORING=true

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable experimental features
ENABLE_EXPERIMENTAL_FEATURES=false

# Enable A/B testing
ENABLE_AB_TESTING=false

# Enable maintenance mode
MAINTENANCE_MODE=false

# Enable beta features
ENABLE_BETA_FEATURES=false

# =============================================================================
# DEPLOYMENT CONFIGURATION
# =============================================================================

# Build configuration
BUILD_STANDALONE=false
ANALYZE_BUNDLE=false

# CDN Configuration
CDN_URL=https://cdn.cipherintelligence.com

# Asset optimization
OPTIMIZE_IMAGES=true
OPTIMIZE_FONTS=true

# =============================================================================
# MONITORING & OBSERVABILITY
# =============================================================================

# Sentry DSN for error tracking
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Datadog API Key (optional)
DATADOG_API_KEY=your-datadog-api-key

# New Relic License Key (optional)
NEW_RELIC_LICENSE_KEY=your-newrelic-license-key

# =============================================================================
# SOCIAL MEDIA & SHARING
# =============================================================================

# Social media handles
TWITTER_HANDLE=@CipherIntel
LINKEDIN_COMPANY=cipher-intelligence
GITHUB_ORG=cipher-intelligence

# Open Graph default image
OG_IMAGE_URL=https://cipherintelligence.com/og-image.jpg

# =============================================================================
# LEGAL & COMPLIANCE
# =============================================================================

# Privacy policy and terms URLs
PRIVACY_POLICY_URL=https://cipherintelligence.com/privacy
TERMS_OF_SERVICE_URL=https://cipherintelligence.com/terms

# Cookie consent configuration
ENABLE_COOKIE_CONSENT=true
COOKIE_CONSENT_STRICT=false

# =============================================================================
# BACKUP & RECOVERY
# =============================================================================

# Backup storage configuration
BACKUP_STORAGE_URL=s3://your-backup-bucket
BACKUP_ENCRYPTION_KEY=your-backup-encryption-key

# =============================================================================
# NOTES
# =============================================================================

# 1. Copy this file to .env.local and fill in your actual values
# 2. Never commit .env.local to version control
# 3. Use different values for development, staging, and production
# 4. Ensure all team members have access to the required credentials
# 5. Regularly rotate sensitive keys and tokens
# 6. Use environment-specific prefixes for different deployments